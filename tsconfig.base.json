{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "lib": ["ES2018.AsyncGenerator"],
        "outDir": "./build/types",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "incremental": true,
        "baseUrl": "./"
    }
}
